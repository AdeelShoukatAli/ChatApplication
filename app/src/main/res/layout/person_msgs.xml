<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="10dp"
                android:paddingLeft="15dp"
                android:paddingRight="60dp"
                android:clipToPadding="false">


    <TextView
            android:id="@+id/person_chatname"
            android:background="@drawable/user_chat"
            android:textColor="#ffffff"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="4dp"
            android:text="Rose"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/person_message_body"
            android:layout_below="@+id/person_chatname"
            android:layout_alignLeft="@+id/person_chatname"
            android:background="@drawable/person_chat"
            android:paddingVertical="12dp"
            android:paddingHorizontal="16dp"
            android:elevation="2dp"
            android:textSize="18dp"
            android:text="How are you doing? This is a long message that should probably wrap."
    />
</RelativeLayout>